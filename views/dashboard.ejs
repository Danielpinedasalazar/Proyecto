<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>MercaU - Online Store</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" />
    <style>
        body {
            background-color: #f4f4f4;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #343a40;
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        header h1 {
            margin: 0;
            font-size: 2.5em;
            font-weight: bold;
            background: linear-gradient(90deg, #ff8a00, #e52e71);
            -webkit-background-clip: text;
            color: transparent;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-info span {
            margin-right: 20px;
            font-size: 1.1em;
        }

        .user-info a {
            color: white;
            text-decoration: none;
            background-color: #d9534f;
            padding: 8px 15px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .user-info a:hover {
            background-color: #c9302c;
        }

        .cart {
            position: relative;
            font-size: 1.8em;
            margin-left: 20px;
            cursor: pointer;
        }

        .cart::after {
            content: attr(data-count);
            position: absolute;
            top: -10px;
            right: -10px;
            background-color: #28a745;
            color: white;
            padding: 2px 6px;
            border-radius: 50%;
            font-size: 0.8em;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .container {
            width: 80%;
            margin: 30px auto;
        }

        .products-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .product-card {
            background-color: white;
            width: 30%;
            margin-bottom: 20px;
            padding: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            text-align: center;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        .product-card img {
            max-width: 100%;
            height: auto;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        .product-card h3 {
            font-size: 1.2em;
            margin-bottom: 10px;
            color: #007bff;
        }

        .product-card p {
            font-size: 1em;
            margin-bottom: 15px;
        }

        .product-card .price {
            font-size: 1.2em;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .product-card a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .product-card a:hover {
            background-color: #218838;
        }

        footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 30px;
        }

        footer p {
            margin: 0;
        }

        /* Estilos para el carrito */
        .cart-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .cart-content {
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 500px;
        }

        .cart-content h2 {
            margin: 0 0 10px;
            font-size: 1.5em;
        }

        .cart-content ul {
            list-style-type: none;
            padding: 0;
        }

        .cart-content ul li {
            margin: 5px 0;
        }

        .close-cart {
            cursor: pointer;
            color: #d9534f;
            font-weight: bold;
            text-align: right;
        }

        /* Popup a침adido al carrito */
        .popup {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            display: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 999;
        }
    </style>
</head>
<body>
    <header>
        <h1>MercaU</h1>
        <div class="user-info">
            <span>Hello, <%= user %></span>
            <a href="/users/logout">Logout</a>
            <div class="cart" data-count="0" onclick="toggleCart()">
                游
            </div>
        </div>
    </header>
    
    <div class="container">
        <div class="products-grid">
            <div class="product-card">
                <img src="/img/Pedro-Feliz.jpg">
                <h3>Pedro sonriente</h3>
                <p>Este puede ser considerado el anti-prime de Pedro, pero sigue siendo una buena compra</p>
                <p class="price">$500.000</p>
                <a href="#" onclick="addToCart('Pedro sonriente', 500000)">Add to Cart</a>
            </div>

            <div class="product-card">
                <img src="/img/pedro-coquete.jpg" alt="Pedro coquete" width="235">
                <h3>Pedro coquete</h3>
                <p>El lado coquete del famoso Pedro (solo 1 versi칩n)</p>
                <p class="price">$10.000.000</p>
                <a href="#" onclick="addToCart('Pedro coquete', 10000000)">Add to Cart</a>
            </div>

            <div class="product-card">
                <img src="/img/Pedro-elegante.jpg" alt="Pedro glamouroso">
                <h3>Pedro glamouroso</h3>
                <p>La artima침a para seducir a cualquiera</p>
                <p class="price">$5.000.000</p>
                <a href="#" onclick="addToCart('Pedro glamouroso', 5000000)">Add to Cart</a>
            </div>

            <div class="product-card">
                <img src="/img/unnamed.jpg" alt="Baby Pedro">
                <h3>Baby Pedro</h3>
                <p>Pedro descubriendo las redes sociales</p>
                <p class="price">$500.000</p>
                <a href="#" onclick="addToCart('Baby Pedro', 500000)">Add to Cart</a>
            </div>  

        </div>
    </div>

    <div class="popup" id="popup">Producto a침adido al carrito</div>

    <div class="cart-modal" id="cartModal">
        <div class="cart-content">
            <span class="close-cart" onclick="toggleCart()">九뒲잺 Cerrar</span>
            <h2>Carrito de Compras</h2>
            <ul id="cartItems"></ul>
            <p id="totalPrice">Total: $0</p>
        </div>
    </div>

    <footer>
        <p>&copy; Vamos a ser el mejor proyecto.com</p>
    </footer>

    <script>
        let cart = [];
        let total = 0;

        function addToCart(productName, productPrice) {
            cart.push({ name: productName, price: productPrice });
            total += productPrice;
            updateCartCount();
            showPopup();
        }

        function updateCartCount() {
            const cartIcon = document.querySelector('.cart');
            cartIcon.setAttribute('data-count', cart.length);
        }

        function toggleCart() {
            const cartModal = document.getElementById('cartModal');
            cartModal.style.display = cartModal.style.display === 'flex' ? 'none' : 'flex';
            displayCartItems();
        }

        function displayCartItems() {
            const cartItems = document.getElementById('cartItems');
            cartItems.innerHTML = '';
            cart.forEach(item => {
                const li = document.createElement('li');
                li.textContent = `${item.name} - $${item.price.toLocaleString()}`;
                cartItems.appendChild(li);
            });
            document.getElementById('totalPrice').textContent = `Total: $${total.toLocaleString()}`;
        }

        function showPopup() {
            const popup = document.getElementById('popup');
            popup.style.display = 'block';
            setTimeout(() => {
                popup.style.display = 'none';
            }, 2000);  // Popup visible por 2 segundos
        }
    </script>
</body>
</html>

